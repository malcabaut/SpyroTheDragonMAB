<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- styles.xml -->
    <style name="FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent01</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="H1" parent="Theme.AppCompat.Light.DarkActionBar">
        ...
        <item name="android:fontFamily">@font/lithos</item>
        <item name="android:textSize">@dimen/text_name_size</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/T_cc</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">#FFFFFF</item>

    </style>

    <style name="H1_scalex" parent="Theme.AppCompat.Light.DarkActionBar">
        ...
        <item name="android:fontFamily">@font/lithosbold</item>
        <item name="android:textSize">@dimen/text_name_size</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/T_cc</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">50</item>
        <item name="android:shadowColor">#FF00FF</item>
        <item name="android:stateListAnimator">@animator/continuous_scalex</item>
    </style>

    <style name="H1_scalexy" parent="Theme.AppCompat.Light.DarkActionBar">
        ...
        <item name="android:fontFamily">@font/lithosbold</item>
        <item name="android:textSize">@dimen/text_name_size</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/T_cc</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">50</item>
        <item name="android:shadowColor">#FF00FF</item>
        <item name="android:stateListAnimator">@animator/continuous_scalexy</item>
    </style>


    <style name="description" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/lithos</item>
        <item name="android:textSize">@dimen/text_description_size</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">#000000</item>
    </style>

    <style name="ButtonStartGuide" parent="Widget.MaterialComponents.Button">
        <!-- Tamaño y bordes redondeados -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:background">@drawable/btn_gradient</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lithos</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="textguia" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/lithos</item>
        <item name="android:textSize">@dimen/text_description_size</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">#FFEB3B</item>
        <item name="android:stateListAnimator">@animator/continuous_rotation_balaceo</item>
    </style>

    <style name="alpha" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:stateListAnimator">@animator/continuous_alpha</item>
    </style>


    <style name="bocadillo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Ajuste de tamaño -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">20dp</item>

        <!-- Estilo del fondo -->
        <item name="android:background">@drawable/old_parchment_v_xml</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:backgroundTintMode">multiply</item>

        <!-- Estilo del texto -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lithos</item>
        <item name="android:lineHeight">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>

        <!-- Transparencia y alineación -->
        <item name="android:alpha">0.9</item>
        <item name="android:gravity">center</item>

    </style>


</resources>